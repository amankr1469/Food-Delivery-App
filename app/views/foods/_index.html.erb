  <% if @page > 1 %>
    <%= link_to 'Previous', restaurant_path(page: @page - 1, page_size: 10), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  <% end %>
    <%= link_to 'Next', restaurant_path(page: @page + 1, page_size: 10), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>
<%end%>
<div class="mt-6">
