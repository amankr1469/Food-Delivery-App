<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @foods.each do |food| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2"><%= food["name"] %></h2>
        <p class="text-gray-700 mb-2"><%= food["description"] %></p>
        <p class="text-gray-800 font-bold mb-2">Price: <%= food["price"] %></p>
        <p class="text-gray-600 mb-2">Category: <%= food["category"] %></p>
      <div class="flex items-center mb-4">
        <% if food["image_url"].present? %>
          <%= image_tag food["image_url"], class: 'w-24 h-24 rounded-full mr-4 object-cover' %>
        <% else %>
          <div class="w-24 h-24 rounded-full flex items-center justify-center mr-4">
            <%= image_tag 'default_food_img.jpg', class: "w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center mr-4"%>
          </div>
        <% end %>
      </div>
        <div class="flex justify-between">
          <%= link_to 'Show', food_path(food["id"]), class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
          <%= link_to 'Edit', edit_food_path(food["id"]), class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
