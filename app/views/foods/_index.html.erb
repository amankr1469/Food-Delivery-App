<p id="notice" class="text-green-600"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Foods</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @foods.each do |food| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-4">
        <h2 class="text-xl font-semibold mb-2"><%= food.name %></h2>
        <p class="text-gray-700 mb-2"><%= food.description %></p>
        <p class="text-gray-800 font-bold mb-2">Price: <%= food.price %></p>
        <p class="text-gray-600 mb-2">Category: <%= food.category %></p>
        <% if food.image.present? %>
          <div class="mb-4">
            <%= image_tag(food.image, class: 'w-full h-48 object-cover') %>
          </div>
        <% else %>
          <div class="mb-4 text-center">
            <p class="text-gray-500">No image available</p>
          </div>
        <% end %>
        <div class="flex justify-between">
          <%= link_to 'Show', food, class: 'text-blue-500 hover:text-blue-700 font-semibold' %>
          <%= link_to 'Edit', edit_food_path(food), class: 'text-yellow-500 hover:text-yellow-700 font-semibold' %>
          <%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700 font-semibold' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to 'New Food', new_food_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
</div>
