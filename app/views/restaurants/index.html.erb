<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>Pincode</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>Description</th>
      <th>Opening hours</th>
      <th>Delivery radius</th>
      <th>Logo url</th>
      <th>Menu url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.user_id %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.pincode %></td>
        <td><%= restaurant.contact_number %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.opening_hours %></td>
        <td><%= restaurant.delivery_radius %></td>
        <td><%= restaurant.logo_url %></td>
        <td><%= restaurant.menu_url %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
