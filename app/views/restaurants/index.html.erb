<p id="notice"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Restaurants</h1>

<%= render 'homes/navbar', form_action: admin_restaurants_results_path %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @restaurants.each do |restaurant| %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center mb-4">
        <% if restaurant.image.present? %>
          <%= image_tag(restaurant.image, class: 'w-24 h-24 rounded-full mr-4 object-cover') %>
        <% else %>
          <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center mr-4">
            <span class="text-gray-500">No image</span>
          </div>
        <% end %>
        <div>
          <h2 class="text-xl font-semibold"><%= restaurant.name %></h2>
          <p class="text-gray-600"><%= restaurant.location %></p>
        </div>
      </div>
      <p><strong>Pincode:</strong> <%= restaurant.pincode %></p>
      <p><strong>Contact Number:</strong> <%= restaurant.contact_number %></p>
      <p><strong>Email:</strong> <%= mail_to restaurant.email %></p>
      <p><strong>Description:</strong> <%= restaurant.description %></p>
      <p><strong>Opening Hours:</strong> <%= restaurant.opening_hours %></p>
      <p><strong>Delivery Radius:</strong> <%= restaurant.delivery_radius %> km</p>
      <div class="mt-4 flex justify-between">
        <%= link_to 'Show', restaurant, class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500' %>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600' %>
