<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<%= render 'homes/navbar', form_action: users_search_path %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Location</th>
      <th>Pincode</th>
      <th>Contact number</th>
      <th>Email</th>
      <th>Description</th>
      <th>Opening hours</th>
      <th>Delivery radius</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.user_id %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.pincode %></td>
        <td><%= restaurant.contact_number %></td>
        <td><%= restaurant.email %></td>
        <% if restaurant.image.present? %>
          <td><%= image_tag(restaurant.image, style: 'width: 100px; height: 100px;') %></td>
        <% else %>
          <td>No image available</td>
        <% end %>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.opening_hours %></td>
        <td><%= restaurant.delivery_radius %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
